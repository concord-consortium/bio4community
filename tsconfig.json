{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "ES2018",
    "lib": ["dom", "dom.iterable", "ES2018"],
    "module": "ESNext",
    "esModuleInterop": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "experimentalDecorators": true,
    "types": [],
    "jsx": "react",
    "noImplicitAny": true
  },

  "include": [
    "./src"
  ],
  "exclude": ["**/node_modules", "**/.*/"]
}
